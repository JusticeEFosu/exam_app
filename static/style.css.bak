/* ==========================
   Global Styles
========================== */
body {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f4f7fa;
  margin: 0;
  padding: 0;
  color: #333;
}

.container {
  width: 80%;
  max-width: 850px;
  background: white;
  margin: 50px auto;
  padding: 40px;
  border-radius: 10px;
  box-shadow: 0 3px 12px rgba(0, 0, 0, 0.1);
}

/* ==========================
   Headings
========================== */
h1 {
  text-align: center;
  color: #0056b3;
  margin-bottom: 25px;
}

p {
  margin: 8px 0;
}

/* ==========================
   Inputs and Buttons
========================== */
input[type="text"] {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 6px;
}

label {
  display: block;
  margin: 6px 0;
  cursor: pointer;
}

button {
  display: block;
  margin: 30px auto 0;
  padding: 12px 30px;
  font-size: 16px;
  border: none;
  border-radius: 6px;
  background-color: #007bff;
  color: white;
  cursor: pointer;
  transition: background 0.2s ease;
}

button:hover {
  background-color: #0056b3;
}

/* ==========================
   Question Styling
========================== */
.question {
  background-color: #f9fbfd;
  padding: 15px 20px;
  border-radius: 8px;
  margin-bottom: 15px;
  border: 1px solid #e0e6ed;
}

hr {
  border: none;
  border-top: 1px solid #ddd;
  margin: 20px 0;
}


.feedback {
  text-align: center;
  font-size: 18px;
  margin-top: 20px;
}

.feedback.success {
  color: #28a745;
}

.feedback.average {
  color: #ffc107;
}

.feedback.fail {
  color: #dc3545;
}

.actions {
  text-align: center;
  margin-top: 30px;
}

.btn {
  text-decoration: none;
  background: #007bff;
  color: white;
  padding: 10px 20px;
  border-radius: 6px;
  margin: 0 10px;
}

.btn.secondary {
  background: #6c757d;
}

.btn:hover {
  background: #0056b3;
}

